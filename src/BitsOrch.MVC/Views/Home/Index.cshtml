@using BitsOrch.Infrastructure
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<FieldDTO>
@{
    Layout = null;
}

<form asp-controller="Home" asp-action="PostFile" method="post" enctype="multipart/form-data">
    <input type="file" name="postedFile">
    <button type="submit">Send</button>
</form>

@if (Model.Count() > 0)
{
    <hr />
    <table>
        <tr>
            <td>Name</td>
            <td>Birthday</td>
            <td>Married</td>
            <td>Phone</td>
            <td>Salary</td>
            <td>Actions</td>
        </tr>
        @foreach (FieldDTO field in Model)
        {
            <tr>
                <td>@field.Name</td>
                <td>@field.BirthDate</td>
                <td>@field.Married</td>
                <td>@field.MobilePhone</td>
                <td>@field.Salary</td>
                <td>
                    <form asp-controller="Home" asp-action="DeleteRow" method="post">
                        <input type="hidden" name="id" value="@field.Id" />
                        <button type="submit">Delete</button>
                    </form>
                    </td>
            </tr>
        }
    </table>
}